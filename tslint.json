{
  "rules": {
    "member-access": [
      true,
      "check-constructor",
      "check-parameter-property"
    ],
    "member-ordering": [
      true,
      {
        "order": [
          "public-static-field",
          "public-instance-field",
          "public-constructor",
          "private-static-field",
          "private-instance-field",
          "private-constructor",
          "public-instance-method",
          "protected-instance-method",
          "private-instance-method"
        ]
      }
    ],
    "no-empty-interface": true,
    "no-unnecessary-type-assertion": true,
    "no-var-requires": true,
    "curly": true,
    "no-bitwise": true,
    "no-console": {
      "options": "log",
      "severity": "warning"
    },
    "no-construct": true,
    "no-duplicate-variable": true,
    "no-empty": true,
    "no-eval": true,
    "no-invalid-template-strings": true,
    "no-invalid-this": true,
    "no-misused-new": true,
    "no-shadowed-variable": true,
    "no-sparse-arrays": true,
    "no-string-literal": true,
    "no-string-throw": true,
    "no-switch-case-fall-through": true,
    "no-unbound-method": true,
    "no-unsafe-finally": true,
    "no-unused-expression": [
      true,
      "allow-fast-null-checks",
      "allow-new"
    ],
    "no-unused-variable": [
      true,
      "check-parameters"
    ],
    "no-use-before-declare": true,
    "no-var-keyword": true,
    "no-void-expression": [
      true,
      "ignore-arrow-function-shorthand"
    ],
    "prefer-conditional-expression": true,
    "radix": {
      "severity": "warning"
    },
    "restrict-plus-operands": true,
    "triple-equals": [
      true,
      "allow-null-check",
      "allow-undefined-check"
    ],
    "cyclomatic-complexity": {
      "severity": "warning"
    },
    "deprecation": {
      "severity": "warning"
    },
    "indent": {
      "options": [
        "spaces",
        2
      ],
      "severity": "warning"
    },
    "linebreak-style": [
      false,
      "LF"
    ],
    "max-file-line-count": {
      "options": 3000,
      "severity": "warning"
    },
    "max-line-length": {
      "options": 200,
      "severity": "warning"
    },
    "no-default-export": {
      "severity": "warning"
    },
    "no-duplicate-imports": true,
    "no-mergeable-namespace": true,
    "prefer-const": true,
    "trailing-comma": {
      "severity": "warning"
    },
    "array-type": {
      "options": "array",
      "severity": "warning"
    },
    "arrow-return-shorthand": {
      "severity": "warning"
    },
    "class-name": true,
    "import-spacing": true,
    "interface-name": true,
    "newline-before-return": {
      "severity": "warning"
    },
    "new-parens": true,
    "no-boolean-literal-compare": true,
    "no-consecutive-blank-lines": {
      "severity": "warning"
    },
    "no-irregular-whitespace": {
      "severity": "warning"
    },
    "one-variable-per-declaration": true,
    "prefer-template": [
      true,
      "allow-single-concat"
    ],
    "quotemark": {
      "options": "single",
      "severity": "warning"
    },
    "semicolon": {
      "options": "always",
      "severity": "warning"
    },
    "variable-name": {
      "options": "check-format",
      "severity": "warning"
    }
  }
}
